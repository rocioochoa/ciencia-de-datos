#plt.show()



#-------------------------------------------------------------------------------------------------------

#Hacer Gráfica de puntos que muestre el comportaohento de "Pedestrians". Que sea una gráfica
#por cada estado y con detalle de puertas en la horizontal
#xOHPD=frameDePerOHPD['Port Name']
#yOHPD=frameDePerOHPD['Value']
#plt.scatter(xOHPD,yOHPD)
#plt.show()


#--------------------------------------------------------------------------------------------------------

#Creamos los data frames con la coohición de PV y PVP Por estado
ohPV= DataFrameOHPV[DataFrameOHPV['Measure']=='Personal Vehicles']
ohPVP= DataFrameOHPVP[DataFrameOHPVP['Measure']=='Personal Vehicle Passengers']
dfohPV= pd.DataFrame(ohPV)
dfohPVP= pd.DataFrame(ohPVP)
sumaOHPV = dfohPV.groupby('Port Name')['Value'].sum()
sumaOHPVP = dfohPVP.groupby('Port Name')['Value'].sum()
dfsumaOHPV= pd.DataFrame(sumaOHPV)
dfsumaOHPVP= pd.DataFrame(sumaOHPVP)



#print(dfsumaOHPV)
#print(dfsumaOHPVP)
#---------------------------------------------------------------------------------------

#Unimos PV y PVP POR CADA ESTADO dentro de un ohsmo data frame
JuntosOH= pd.merge(dfsumaOHPV,dfsumaOHPVP,on='Port Name')
dfJuntosOH=pd.DataFrame(JuntosOH)


#print(dfJuntosOH)
